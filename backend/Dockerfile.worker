FROM python:3.12-slim

WORKDIR /app

# Install only system dependencies needed for worker
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy only worker requirements
COPY backend/requirements-worker.txt .

# Install only worker dependencies
RUN pip install -r requirements-worker.txt

# Copy only worker files
COPY backend/worker.py .

# Run the worker
CMD ["python", "worker.py"]